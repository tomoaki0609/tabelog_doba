%h2 Sign up
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!
  .field
    = f.label :nickname
    %br/
    = f.text_field :nickname, placeholder: 'ニックネームを入力（必須）'
  .field
  = f.file_field :avatar
  .field
    = f.label :email
    %br/
    = f.email_field :email, autofocus: true, placeholder: 'メールアドレスを入力（必須）'
  .field
    = f.label :password
    - if @minimum_password_length
      %em
        (#{@minimum_password_length} characters minimum)
    %br/
    = f.password_field :password, autocomplete: "off", placeholder: 'パスワードを入力（必須）'
  .field
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation, autocomplete: "off", placeholder: 'パスワードを入力（再度）'
  .actions
    = f.submit "Sign up"
= render "devise/shared/links"

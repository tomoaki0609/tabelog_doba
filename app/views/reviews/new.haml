%body
  #main_cnt_wrapper
    #yjContentsBody
      .yjContainer
        %span.yjGuid
          %a#yjContentsStart{:name => "yjContentsStart"}
          %img{:alt => "ここから本文です", :height => "1", :src => "#{current_user.avatar}", :width => "1"}/
        #yjMain
          %article.section
            .container
              %header.header.header--section
                %h2.text-middle
                  %i.icon-movie.color-gray-light>
                  投稿
              %div
                %ul.listview.js-lazy-load-images
                  %li{:style => "margin-bottom: 15px"}
                    %a.listview__element--right-icon{:href => "#"}
                      .box
                        .box__cell.w80
                          .thumbnail.thumbnail--photo
                            .thumbnail__figure{:style => "background-image: url(#{@product.image_url});"}
                        .box__cell.pl1em
                          %h3.text-middle.text-break.color-sub
                            = @product.shop_name
                          %p.text-xsmall
                          %p.text-xsmall.opacity-60
            = form_for [@product, @review] do |f|
              %div{:style => "margin: 8px 0"}
                = f.label :rate, '評価', style: { 'margin-right' => 8 }
                = f.number_field :rate, placeholder: '評価', value: 1, max: 10, min: 1, html: { class: "search__query", style: 'text-align: right;' }
              %div{:style => "margin: 8px 0"}
                = f.text_area :title, placeholder: 'タイトルを書いてね！', style: 'width: 80%;height: 50px;'
                = f.text_area :comment, placeholder: 'コメントを書いてね！', style: 'width: 100%;height: 300px;'
              .row
                .col10.push1
                  = button_tag type: "submit", class: "btn btn--block" do
                    投稿する
                    %i.icon-arrow-right
        #yjSub

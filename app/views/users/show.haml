%head
%body
  %header
    .frame
      .title
        %p #{current_user.nickname}さんのトップページ『#{current_user.nickname}のレストランガイド』
      .user-menu
        %ul
          %li
            %a.border{href: 'http://google.co.jp'} メッセージ
          %li
            %a{href: 'http://google.co.jp'} お知らせ
          %li
            %a{href: 'http://google.co.jp'} 0pt
          %li
            %a{href: 'http://google.co.jp'} 予約確認
          %li
            %a{href: 'http://google.co.jp'} 行った・行きたい
          %li
            = link_to 'マイページ', '/users/current_user.id', method: :get
          %li
            %form.select
              %select
                %option 洗濯してください
                %option フォロー中一覧
                %option 下書き一覧
                %option 設定
                = link_to '/users/sign_out' do
                  %option ログアウト
      .logo
        %p 食べログ
      .box
      .search-form
        %form
        .form
          %input.text-form{type: 'text', id: 'text'}
          %p.button-form 検索
  .first-contents
    .frame
      .link
      .back-image
        .bottom
          %p #{current_user.nickname}のレストランガイド
          %input.button-form{type:"button", href: 'http://google.co.jp', value: "レュビアーページ設定"}
      .back-avatar
        = image_tag current_user.avatar, size: "120x120", class: "avatar"
      .profile
        .profile-left
          %p #{current_user.nickname}
          %a{href: 'http://google.co.jp'} プロフィール詳細へ
        .profile-right
          .slide
            %span.left
              %p 口コミ数
            %span.right
              %p 0件
            %span.left
              %p 写真
            %span.right
              %p 0件
            %span.left
              %p 訪問者数
            %span.right
              %p 0件
            %span.left
              %p いいね
            %span.right
              %p 0件
      %hr
      .log
        .box
          %p.count 0
          %p.item ログ
        .box
          %p.count 0
          %p.item 行ったお店
        .box
          %p.count 0
          %p.item 行きたいお店
        .box
          %p.count 0
          %p.item まとめ
        .box
          %p.count 0
          %p.item フォロー中
        .box
          %p.count 0
          %p.item フォロワー
  %hr.line
  .second-contents
    .blank
    .favorite


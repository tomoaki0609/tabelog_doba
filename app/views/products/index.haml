        %input{type: "button", id: "play-button", value: "PLAY"}
      .top-contents#color-change
        .logo
          -if user_signed_in?
            = link_to '食べログ', root_path, class: 'logo-style'
          -else
            = link_to '食べログ', new_user_session_path
        .user-menu
          %ul
            -if user_signed_in?
              %ul
                %li
                  %a{href: 'http://google.co.jp'} メッセージ
